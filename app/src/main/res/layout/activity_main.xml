<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivityRekap"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:paddingBottom="50dp"
        android:text="SELAMAT DATANG PADA FITUR REKAP DATA"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"

        />

    <ImageView
        android:layout_width="343dp"
        android:layout_height="233dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:src="@drawable/data"
        android:paddingLeft="10sp"
        android:layout_marginTop="10dp"
        android:paddingBottom="50dp"
        android:outlineAmbientShadowColor="#00FFFF"
        />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/bt_createdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Masuk Data Hari Ini" />

    <Button
        android:layout_margin="5dp"
        android:id="@+id/bt_viewdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lihat Rekap Data" />

</LinearLayout>